{% extends 'admin/base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
    <ol class="breadcrumb breadcrumb-sm">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Vue globale</li>
    </ol>

    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-primary o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-book"></i>
                    </div>
                    <div class="mr-5">{{ project | length }} projets</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{ path('admin_project_index') }}">
                    <span class="float-left">Voir en détail</span>
                    <span class="float-right">
                        <i class="fas fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-success o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-terminal"></i>
                    </div>
                    <div class="mr-5">{{ technology | length }} technologies</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{ path('admin_technology_index') }}">
                    <span class="float-left">Voir en détail</span>
                    <span class="float-right">
                        <i class="fas fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>
{% endblock %}