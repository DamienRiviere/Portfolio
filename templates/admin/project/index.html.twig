{% extends 'admin/base.html.twig' %}

{% block title %}Liste des projets{% endblock %}

{% block body %}
    <ol class="breadcrumb breadcrumb-sm">
        <li class="breadcrumb-item">
            <a href="{{ path('admin_dashboard') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Liste des projets</li>
    </ol>

    {% include 'partials/_alert.html.twig' %}

    <!-- Table Technology -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Tous les projets
        </div>
        <div class="card-body card-body-sm">
            <div class="table-responsive">
                <table class="table table-striped table-sm" id="dataTable" width="100%" cellspacing="0">
                    <thead class="text-center">
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Slug</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tfoot class="text-center">
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Slug</th>
                        <th>Action</th>
                    </tr>
                    </tfoot>
                    <tbody class="text-center">
                    {% for project in projects %}
                        <tr>
                            <td>{{ project.id }}</td>
                            <td>{{ project.name }}</td>
                            <td>{{ project.slug }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_project_update', {'slug': project.slug}) }}" class="btn btn-md btn-secondary" title="Modifier le projet">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{{ path('admin_project_delete', {'id': project.id}) }}" class="btn btn-md btn-danger delete-link" title="Supprimer le projet">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}