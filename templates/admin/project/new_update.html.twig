{% extends 'admin/base.html.twig' %}

{% set route = app.request.attributes.get("_route") %}

{% block title %}
    {% if route == "admin_project_new" %}
        Créer un projet
    {% else %}
        Modifier un projet
    {% endif %}
{% endblock %}

{% form_theme form 'admin/project/_project.html.twig' %}

{% block body %}
    <ol class="breadcrumb breadcrumb-sm">
        <li class="breadcrumb-item">
            <a href="{{ path('admin_project_index') }}">Liste des projets</a>
        </li>
        <li class="breadcrumb-item active">
            {% if route == "admin_project_new" %}
                Créer un projet
            {% else %}
                Modifier un projet
            {% endif %}
        </li>
    </ol>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}

            {{ form_row(form.name) }}

            {{ form_row(form.description) }}

            {{ form_row(form.technology) }}

            {{ form_row(form.note) }}

            {% if route == "admin_project_new" %}
                {{ form_row(form.picture) }}

                {{ form_row(form.pictureDescription) }}
            {% endif %}

            {{ form_row(form.github) }}

            {{ form_row(form.link) }}

            <button type="submit" class="btn btn-primary btn-block">
                {% if route == "admin_project_new" %}
                    Créer
                {% else %}
                    Modifier
                {% endif %}
            </button>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}