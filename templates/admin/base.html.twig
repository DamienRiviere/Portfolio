<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}{% endblock %}</title>

    <!-- Favicons -->
    <link href="{{ asset('img/favicon/favicon-32x32.png') }}" type="img/png" rel="icon" />
    <link rel="icon" type="img/png" href="{{ asset('img/favicon/favicon-32x32.png') }}" sizes="32x32">
    <link rel="icon" type="img/png" href="{{ asset('img/favicon/favicon-16x16.png') }}" sizes="16x16">

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary"/>
    <meta name="twitter:title" content="Damien RIVIERE: Développeur PHP/Symfony"/>
    <meta name="twitter:image:src" content="{{ asset('img/portfolio.png') }}"/>
    <meta name="twitter:description" content="Portfolio de Damien Riviere : Développeur PHP/Symfony"/>

    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="Damien RIVIERE: Développeur PHP/Symfony"/>
    <meta property="og:type" content="website"/>
    <meta property="og:url" content="http://d-riviere.fr/"/>
    <meta property="og:image" content="{{ asset('img/portfolio.png') }}"/>
    <meta property="og:description" content="Portfolio de Damien Riviere : Développeur PHP/Symfony"/>

    {% block stylesheets %}
        <!-- Font Google -->
        <link href="https://fonts.googleapis.com/css?family=Permanent+Marker" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Comfortaa" rel="stylesheet">
        {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    {% endblock %}
</head>
    <body id="page-top">
        {% include 'admin/partials/_navbar.html.twig' %}

        <!-- Left menu on the administration  -->
        <div id="wrapper">
            <ul class="sidebar navbar-nav bg-secondary">
                <li class="nav-item">
                    <a class="nav-link" href="/admin">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-book"></i>
                        <span>Projet</span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                        <a class="dropdown-item" href="{{ path('admin_project_index') }}">Liste projet</a>
                        <a class="dropdown-item" href="{{ path('admin_project_new') }}">Créer un projet</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-terminal"></i>
                        <span>Technologie</span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                        <a class="dropdown-item" href="{{ path('admin_technology_index') }}">Liste technos</a>
                        <a class="dropdown-item" href="{{ path('admin_technology_new') }}">Créer une techno</a>
                    </div>
                </li>
            </ul>

            <div id="content-wrapper">
                <div class="container-fluid">
                    {% block body %}{% endblock %}
                </div>

                <footer class="sticky-footer">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>© 2020 Copyright : <a href="http://d-riviere.fr/" class="text-color-red text-decoration-none"> d-riviere.fr</a></span>
                        </div>
                    </div>
                </footer>
            </div>
        </div>

        {{ encore_entry_script_tags('app') }}
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>